<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.YapearA">

    <LinearLayout
        android:id="@+id/fragment_Nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            android:text="Yapear"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            >
            <ImageButton
                android:id="@+id/btnCancelar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fragment_Nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:id="@+id/txtContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angela G. Farfan C."
            android:textColor="@color/yape"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_dinero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="70dp"
        app:layout_constraintTop_toBottomOf="@+id/container_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/txtSignoDinero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s/"
            android:textStyle="bold"
            android:textSize="48sp"
            android:textColor="@color/yape"/>

        <EditText
            android:id="@+id/txtDinero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/yape"
            android:textStyle="bold"
            android:textSize="48sp"
            android:background="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_validacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/container_dinero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/txtMsgValidacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El monto ingresado no es vÃ¡lido"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:background="@color/cardview_shadow_start_color"
            android:padding="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_Mensaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="120dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/container_validacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <EditText
            android:id="@+id/edtMsgAdicional"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Agregar Mensaje"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:padding="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/container_Mensaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            android:id="@+id/btnOtrosBancos"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="OTROS BANCOS"
            />
        <Button
            android:id="@+id/btnPago"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="YAPEAR"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>